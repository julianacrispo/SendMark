<% if current_user %>
    <% if like = current_user.liked(bookmark) %>
      <%= link_to [topic, bookmark, like], class: 'btn-group btn-group-xs', method: :delete do %>
        <i class="glyphicon glyphicon-thumbs-up"> </i>&nbsp; Unlike
      <% end %>
    <% else %>
      <%= link_to [topic, bookmark, Like.new], class: 'btn-group btn-group-xs', method: :submit do %>
          <i class="glyphicon glyphicon-thumbs-down"> </i>&nbsp; Like
        <% end %>
      <% end %>
      <% else %>
      <small> (Sign in/sign up to like and save link) </small>
    <% end %>

